import YamlElixir.Sigil

{:ok, applied_resource} =
  ~y"""
  apiVersion: v1
  kind: Pod
  metadata:
    name: busybox
    namespace: kino-k8s
  spec:
    containers:
    - image: busybox
      command:
        - sleep
        - "3600"
      imagePullPolicy: IfNotPresent
      name: busybox
    restartPolicy: Always
  """
  |> K8s.Client.apply()
  |> K8s.Client.put_conn(conn)
  |> K8s.Client.run()

